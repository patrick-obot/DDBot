# Services to monitor (comma-separated)
DD_SERVICES=mtn,vodacom,telkom

# Alert threshold (number of reports to trigger alert)
DD_THRESHOLD=10

# Polling interval in seconds (default: 5 minutes)
DD_POLL_INTERVAL=300

# Alert cooldown in seconds (default: 30 minutes)
DD_ALERT_COOLDOWN=1800

# OpenClaw gateway config
OPENCLAW_GATEWAY_URL=http://127.0.0.1:18789
OPENCLAW_GATEWAY_TOKEN=your_gateway_token

# WhatsApp recipients (comma-separated)
# Phone numbers: country code + number, no + (e.g. 27821234567)
# Group chats: use the group JID (e.g. 120363044xxxxx@g.us)
WHATSAPP_RECIPIENTS=27XXXXXXXXX

# Logging level
LOG_LEVEL=INFO
